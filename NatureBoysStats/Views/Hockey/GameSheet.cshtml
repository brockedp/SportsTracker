    <h1>GameSheet</h1>
    <div class="teamTable">
        <form action="/Hockey/EditGameSheets" method="post">
            <table style="width:25px">
                <tr>
                    <th>Number</th>
                    <th>Nick Name</th>
                    <th align="center">Goals</th>
                    <th>Assists</th>
                    <th>Penalty Minutes</th>
