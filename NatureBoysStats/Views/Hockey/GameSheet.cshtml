                <td>@Html.TextBoxFor(x => Model[i].Assist, new { style = "width:50px" })</td>
                <td>@Html.TextBoxFor(x => Model[i].PenaltyMinutes, new { style = "width:50px" })</td>
                <td>@Html.TextBoxFor(x => Model[i].BeersBefore, new { style = "width:50px" })</td>
                <td>@Html.TextBoxFor(x => Model[i].BeersDuring, new { style = "width:50px" })</td>
                <td>@Html.TextBoxFor(x => Model[i].BeersAfter, new { style = "width:50px" })</td>
                @*<td>@Html.TextBoxFor(x => Model[i].BeersAfter, new { @value = "0" })</td>*@
